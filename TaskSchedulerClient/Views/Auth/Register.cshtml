@model TaskSchedulerClient.Models.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.css'>
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/forms/forms.css" />
</head>
<body>
    <div class="signupSection">
        <div class="info">
            <h2>Welcome to GigaBruh</h2>
            <i class="icon ion-ios-ionic-outline" aria-hidden="true"></i>
            <p>We are the future</p>
        </div>

        <form asp-action="Register" class="signupForm">
            <h2>Sign Up</h2>
            <ul class="noBullet">
                <li>
                    <label for="username"></label>
                    <input type="text" class="inputFields" id="username" name="UserName" placeholder="UserName" value="" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </li>
                <li>
                    <label for="email"></label>
                    <input type="email" class="inputFields" id="email" name="UserEmail" placeholder="your.mail@gmail.com" value="" required />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </li>
                <li>
                    <label for="password"></label>
                    <input type="password" class="inputFields" id="password" name="UserPassword" placeholder="Password" value="" required />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </li>
                <li>
                    <label for="confirmPassword"></label>
                    <input type="password" class="inputFields" id="confirmPassword" name="ConfirmPassword" placeholder="ConfirmPassword" value="" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </li>
                <li id="center-btn">
                    <button type="submit" id="join-btn" name="join">Join</button>
                </li>
            </ul>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>