@model IEnumerable<TaskSchedulerAPI.Models.Assignment>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/personalOffice/buttons/delete.css" />
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-controller="User" asp-action="Update" asp-route-id="@item.AssignmentId"> Edit</a>
                <a class="btn a-delete" asp-controller="User" asp-action="Delete" asp-route-id="@item.AssignmentId"> <span></span><text>Delete</text></a>

            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/js/personalOffice/buttons/delete.js"></script>

</body>
</html>
