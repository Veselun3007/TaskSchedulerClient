@model TaskSchedulerClient.Models.Assignment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/profilePage/assets/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="~/css/profilePage/assets/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/css/forms/edit.css" />
</head>

<body>
    <div class="content">
        <div class="container">
            <div class="row align-items-stretch no-gutters contact-wrap">
                <div class="col-md-12">
                    <div class="form h-100">
                        <form class="mb-5" asp-action="Edit">
                            <div class="row">
                                <input asp-for="AssignmentId" type="hidden" />
                                <div class="col-md-6 form-group mb-3">
                                    <label for="AssignmentName" class="col-form-label">Назва завдання *</label>
                                    <input asp-for="AssignmentName" class="form-control" id="AssignmentName" type="text" placeholder="Task name" />
                                    <span asp-validation-for="AssignmentName"></span>
                                </div>
                                <div class="col-md-6 form-group mb-3">
                                    <label for="AssignmentTime" class="col-form-label">Термін виконання</label>
                                    <input asp-for="AssignmentTime" type="datetime-local" id="AssignmentTime" class="form-control" />
                                    <span asp-validation-for="AssignmentTime"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label for="AssignmentState" class="col-form-label">Стан виконання</label>
                                    <select asp-for="AssignmentState" class="custom-select" id="AssignmentState" name="AssignmentState">
                                        <option value="@(null)" selected>Виконується</option>
                                        <option value="true">Виконано</option>
                                        <option value="false">Не виконано</option>
                                    </select>
                                    <span asp-validation-for="AssignmentState"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group mb-3">
                                    <label for="AssignmentDescription" class="col-form-label">Опис завдання</label>
                                    <input asp-for="AssignmentDescription" id="AssignmentDescription" 
                                    class="form-control" maxlength="250" placeholder="Write your description" value="@("")" >
                                    <span asp-validation-for="AssignmentDescription"></span>
                                </div>
                            </div>
                            <input asp-for="UserId" type="hidden" />
                            <div role="toolbar" class="text-center p-3">
                                <div class="btn-group" role="group">
                                    <button type="submit"class="btn btn-gradient-success btn-icon-text">Зберегти завдання</button>
                                </div>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-gradient-info" href="~/Assignment/Index">Назад</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Scripts-->
    <script type="text/javascript" src="js/personalOffice/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="js/personalOffice/popper.min.js"></script>
    <script type="text/javascript" src="js/personalOffice/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/personalOffice/owl.carousel.min.js"></script>
    <script type="text/javascript" src="js/personalOffice/main.js"></script>
</body>
</html>
